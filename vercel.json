{
  "version": 2,
  "framework": null,
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/index.js" },

    /* static site from /public (what your app.js serves) */
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^/schedule.html$", "dest": "/public/schedule.html" },
    { "src": "^/admin.html$", "dest": "/public/admin.html" },
    { "src": "^(?!/api)(.*)$", "dest": "/public$1" }
  ]
}
